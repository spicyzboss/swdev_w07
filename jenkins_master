pipeline {
    agent any

    stages {

        stage('Welcome to master'){
            steps{
                echo 'Start Program'
            }
        }

        stage('Tigger the Slave Jobs') {
            steps {
                echo 'Start Trigger to send name and age to slave'

                script {
                    import groovy.json.JsonSlurper

                    def config_file = readFile './config.json'
                    def config = new JsonSlurper().parseText(config_file)

                    env.name = config.name
                    env.age = config.age
                }

                build job: 'slave', parameters: [
                    string(name: 'name', value: $name),
                    string(name: 'age', value: $age)
                ]
            }
        }
    }
}